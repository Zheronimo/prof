extends ../main

block title
	| Welcome
block content
	section.section.welcome
		a(href="#").btn.welcome__btn Авторизоваться
		.welcome__container
			.welcome__user
				.user
					.user__photo
						.user__photo-avatar
							img(src="static/img/avatar.jpg", alt="")
					.user__name Евгений Кириченко
					.user__desc Личный сайт веб-разработчика
				ul.socials
					each item in socials
						li.socials__item
							a(href="#" class="socials__link socials__link_" + item)
								+icon(item, "welcome-icon")
				ul.btn-nav.welcome__btn-nav
					each link in ["Мои работы","Обо мне","Блог"]
						li.btn-nav__item
							if(link == "Обо мне")
								a(href="about.html").btn-nav__link=link
							else
								a(href="#").btn-nav__link=link
			.welcome__autor
				.autor
					.subtitle.autor__title
							| Авторизуйтесь
					form.autor__form
							.autor__login
									input(type="text" name="login" placeholder="Логин")
							.autor__pass
									input(type="password" name="pass" placeholder="Пароль")
							.autor__chack
								label
									input(type="checkbox") 
									span Я человек
							.autor__radio
								p Вы точно не робот?
								label
									input(type="radio" value="Да" name="question")
									| Да
								label
									input(type="radio" value="Не уверен" name="question")
									| Не уверен
							ul.btn-nav.login__btn-nav
									each link in ["На главную","Войти"]
											li.btn-nav__item
													if(link == "На главную")
															a(href="#").btn-nav__link.btn-nav__link_main=link
													else
															a(href="#").btn-nav__link=link
		.welcome__footer
			p © Кириченко Евгений | Создано с любовью в LoftSchool | 2018 